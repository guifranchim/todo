
global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'backend'
    static_configs:
      - targets: ['backend-{{ app_env }}:3000']

  - job_name: 'frontend-nginx'
    static_configs:
      - targets: ['frontend-{{ app_env }}:80']

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['node-exporter-{{ app_env }}:9100']